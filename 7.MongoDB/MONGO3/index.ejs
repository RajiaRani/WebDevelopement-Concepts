<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Whatsapp Demo</title>
   <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>All Chats</h3>

    <form method="GET" action="/chats/new">
    <button>New Chat</button>
    </form>
    <br>
    <% for(let chat of chats) { %>
      <div class="chatbox">
        <p>From : <%= chat.from %></p>
        <div class="msgbox">
            <p> <%= chat.message %></p>
            <form method="GET" action="/chats/<%= chat._id %>/edit">
                <button>Edit</button>
            </form>
            <br>
            <!-- For Show page ke liye button -->
            <form action="/chats/<%= chat._id %>"  method="GET">
             <button>Show</button>
            </form>
              <br/>
            <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                <button>Delete</button>
            </form>
        </div>
        <p>Recieved by :<%= chat.to %></p>
        <hr/>
        <p><%= chat.created_at.toString().split(" ")[4] %></p>
         <p><%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %></p>
      </div> 
      <br/>  <br/>
   <% } %>
</body>
</html>